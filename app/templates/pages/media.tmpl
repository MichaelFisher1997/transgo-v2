{{ define "media" }}
{{ template "base" . }}
{{ end }}

{{ define "content" }}
<div class="container mx-auto px-4 py-8">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="md:flex">
      <div class="md:w-1/3">
        {{ if .PosterPath.Valid }}
        <img src="{{ .PosterPath.String }}" alt="{{ .Title }}" class="w-full h-auto">
        {{ else }}
        <img src="/static/images/placeholder.png" alt="{{ .Title }}" class="w-full h-auto">
        {{ end }}
      </div>
      <div class="p-8 md:w-2/3">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ .Title }}</h1>
        <div class="flex items-center mt-2">
          <span class="text-yellow-500">{{ if .Rating.Valid }}{{ .Rating.String }}/10{{ else }}N/A{{ end }}</span>
          <span class="mx-2 text-gray-400">|</span>
          <span class="text-gray-600 dark:text-gray-300">{{ if .Year.Valid }}{{ .Year.Int64 }}{{ else }}N/A{{ end }}</span>
        </div>
        <p class="mt-4 text-gray-600 dark:text-gray-300">{{ if .Description.Valid }}{{ .Description.String }}{{ else }}No description available.{{ end }}</p>
        
        <div class="mt-6">
          <a href="/" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Back to Library
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{{ end }}
